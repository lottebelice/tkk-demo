<properties>
  <comment>Config file for Springfield</comment>

  <!-- Marge communcation port, only value used unless a smithers -->
  <entry key="marge-port">5049</entry>
  <entry key="default-bart-port">80</entry>
  <entry key="default-smithers-port">80</entry>
  <entry key="external-ipnumber">{{springfield_ip}}</entry>

  <!-- DATABASE & LOG SETTINGS -->
  <entry key="db-host">127.0.0.1</entry>
  <entry key="db-password">FTHmc8e4</entry>
  <entry key="db-user">smithers</entry>
