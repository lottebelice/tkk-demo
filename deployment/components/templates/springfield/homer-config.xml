  <entry key="ingest-base-dir">/usr/local/data/va-data1</entry>
  <entry key="server-range-offset">4</entry>
  <entry key="number-of-servers">12</entry>
  <entry key="ftp-server-prefix">stream</entry>
  <entry key="ftp-server-suffix">.noterik.com</entry>
  <entry key="mount-prefix">stream</entry>
  <entry key="ftp-image">images1.noterik.com</entry>
  <entry key="ftp-image-user">images1</entry>
  <entry key="ftp-image-pass">images1</entry>
  <entry key="ftp-image-path">images1</entry>
  <entry key="thumb-width">90</entry>
  <entry key="thumb-height">50</entry>

  <!-- DISPATCHER SETTINGS -->
  <entry key="message-dispatcher-group">225.4.42.42</entry>
</properties>